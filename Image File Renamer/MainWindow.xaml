<Window
    x:Class="PhotoOrganizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Image File Renamer"
    Height="300" Width="500"
    Background="#1E1E1E" Foreground="White">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="SourceButton" Content="Select Source Folder" Width="200" Margin="5"
                    Background="#2D2D30" Foreground="White" Click="SourceButton_Click"/>
            <Button x:Name="TargetButton" Content="Select Target Folder" Width="200" Margin="5"
                    Background="#2D2D30" Foreground="White" Click="TargetButton_Click"/>
            <Button x:Name="OrganizeButton" Content="Organize Photos" Width="200" Margin="5"
                    Background="#007ACC" Foreground="White" Click="OrganizeButton_Click"/>
            <TextBlock x:Name="StatusText" Text="Ready" Margin="5" TextAlignment="Center"
                       Foreground="LightGray"/>
        </StackPanel>
    </Grid>
</Window>